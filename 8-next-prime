public Integer nextPrime(Integer num) {
    do{
        num++;
    }while(!prime(num + 1));

    return num;
}
static Boolean prime(Integer n)
{
    Integer count=0;
    for(Integer i=1;i<=n;i++)
    {
        if(math.mod(n,i)==0)
        {
            count++;
        }
    }
    if(count==2)
    {
        return true;
    }
    return false;
}